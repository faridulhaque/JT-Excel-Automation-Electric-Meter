generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  isVerified Boolean
  code String
  meters    Meter[]
  createdAt DateTime @default(now())
}

model Meter {
  id        String   @id @default(uuid())
  meterNo   String
  name      String
  balance   Float
  threshold Float
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([meterNo, userId])
}
